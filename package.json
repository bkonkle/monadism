{
  "name": "monadism",
  "version": "1.1.0",
  "main": "lib/index.js",
  "description": "A small set of monadic Types implemented in TypeScript",
  "repository": {
    "type": "git",
    "url": "git@github.com:communityfunded/monadism.git"
  },
  "files": [
    "lib"
  ],
  "author": "Community Funded (http://communityfunded.com)",
  "license": "BSD-2-Clause",
  "scripts": {
    "check.types": "yarn build --noEmit",
    "build": "tsc --declaration --pretty --skipLibCheck",
    "build.docs": "typedoc --out docs src --exclude \"**/*+(TestSetup|.test).ts\" --name Monadism; yarn build.docs.config",
    "build.docs.config": "cp .gh-pages.yml docs/_config.yml",
    "build.watch": "yarn build --watch",
    "build.examples.mario": "webpack --config examples/signal/mario/webpack.config.js",
    "lint": "tslint --format stylish --project tsconfig.json",
    "test.watch": "NODE_ENV=test jest --watch",
    "test": "NODE_ENV=test jest"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "@types/raf": "^3.4.0",
    "babel-loader": "^8.0.5",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "raf": "^3.4.1",
    "terser-webpack-plugin": "^1.2.3",
    "ts-essentials": "^2.0.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-microsoft-contrib": "^6.1.0",
    "tslint-react": "^4.0.0",
    "typedoc": "^0.14.2",
    "typescript": "3.4.2",
    "waait": "^1.0.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0"
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "yarn lint",
        "git add"
      ]
    },
    "ignore": [
      "lib/**/*"
    ]
  }
}
