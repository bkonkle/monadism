{
  "name": "monadism",
  "version": "1.1.0",
  "main": "lib/index.js",
  "description": "A small set of monadic Types implemented in TypeScript",
  "repository": {
    "type": "git",
    "url": "git@github.com:communityfunded/monadism.git"
  },
  "files": [
    "lib"
  ],
  "author": "Community Funded (http://communityfunded.com)",
  "license": "BSD-2-Clause",
  "scripts": {
    "check.types": "yarn build --noEmit",
    "build": "tsc --declaration --pretty --skipLibCheck",
    "build.watch": "yarn build --watch",
    "docs.config": "cp .gh-pages.yaml docs/_config.yaml",
    "docs.build": "typedoc --out docs src --exclude \"**/*+(TestSetup|.test).ts\" --name Monadism; yarn docs.config",
    "lint": "tslint --format stylish --project tsconfig.json",
    "test.watch": "NODE_ENV=test jest --watch",
    "test": "NODE_ENV=test jest"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "ts-essentials": "^2.0.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-microsoft-contrib": "^6.1.0",
    "tslint-react": "^4.0.0",
    "typedoc": "^0.14.2",
    "typescript": "3.4.2",
    "waait": "^1.0.4"
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "yarn lint",
        "git add"
      ]
    },
    "ignore": [
      "lib/**/*"
    ]
  }
}
